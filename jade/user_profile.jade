.user-profile-wrapper
  .user-profile.js-user-card(data-id='{{id}}')
    img.profile-picture(src='imgs/users/{{profile_picture_src}}')

    p.name {{name}}

    ul.about
      li.location
        img(src='imgs/ic_location.png')
        p {{location}}
      li.music
        img(src='imgs/ic_music.png')
        p {{music}}
      li.likes
        img(src='imgs/ic_likes.png')
        p {{likes}}